{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/apps/server/src/index.ts",
            "outFiles": ["${workspaceFolder}/apps/server/dist/**/*.js"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceFolder}/apps/server",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}
